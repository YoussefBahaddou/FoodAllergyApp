<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodAllergyApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodAllergyApp.NoActionBar" />

        <!-- Authentication Activities -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FoodAllergyApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".auth.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodAllergyApp.NoActionBar" />

        <!-- Scanner Activity -->
        <activity
            android:name=".ui.scanner.ScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodAllergyApp.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- Other Activities -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodAllergyApp.NoActionBar" />

        <activity
            android:name=".ui.allergies.AllergySelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodAllergyApp.NoActionBar" />

        <!-- Add this inside the <application> tag -->
        <activity
            android:name=".ui.scanner.ScanResultActivity"
            android:exported="false"
            android:parentActivityName=".ui.scanner.ScannerActivity" />

    </application>

</manifest>
